<% @features_days.keys.sort.each do |day| %>
<div class="feature-date">
    <%= day.time.to_s(:humanized_ago) %>
</div>
<% for feature in @features_days[day] %>
<table class="feature-box">
    <tr>
        <td rowspan="2" id="upvote-box">
            <%= link_to content_tag(:i, "", class: "glyphicon glyphicon-arrow-up") + "", vote_feature_path(feature, type: "up"), method: "post" %>
            <br>
            <%= pluralize feature.reputation_for(:votes).to_i, "" %>
        </td>
        <td>
            <table>
                <tr>
                <td id="box-name">
                        <!-- <a href="#feature" data-toggle="modal"><strong><%= feature.name %></strong> @ <%= feature.company %></a> -->
                        <a href="/features/<%= feature.id %>">
                            <%= h truncate(feature.name, :length => 50) %>
                        </a>
                    </td>
                </tr>
                <tr>
                    <td id="box-company">
                        <a href="#">
                            <%= feature.company %>
                        </a>
                    </td>
                </tr>
            </table>
        </td>
        <td rowspan="2" id="box-image">
            <%= image_tag User.find(feature.user_id).avatar(:medium) %>
        </td>
    </tr>
</table>
<% end %>
<% end %>
<br>

<div>
     <form action="/features/new">
          <input class="new-feature-button" type="submit" value="Post a feature">
     </form>
</div>